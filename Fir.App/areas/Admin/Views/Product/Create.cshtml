@model Product

<div class="container">
	<div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
	<form method="post" enctype="multipart/form-data">
	<div class="form-group">
		    <label asp-for="@Model.Name" >Name:</label>
			<input class="form-control" asp-for="@Model.Name"/>
			<span asp-validation-for="Name" class="text text-danger"></span>
	</div>
		<div class="form-group">
			<label asp-for="Description">Description:</label>
			<input  class="form-control" asp-for="Description" />
		</div>
	<div class="form-group">
		<select asp-for="PositionId" class="form-select" aria-label="Default select example">
         <option selected>Choose one of them</option>
@foreach (var item in ViewBag.Positions)
{
	 <option value="@item.Id">@item.Name</option>

}
            </select>
        </div>
	<div class="form-group">
		    <label asp-for="@Model.FormFile" >File:</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile"/>
    </div>
			@Html.AntiForgeryToken()
	<button type="submit">Create</button>
	</form>
</div>

@model UpdatedUserVM;
<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form method="post" class="mx-1 mx-md-4">
                    <div asp-validation-summary="ModelOnly"></div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" asp-for="Name" class="form-control" />
                      <label class="form-label" asp-for="Name"></label>
                      <span class="text text-danger" asp-validation-for="Name"></span>
                    </div>
                  </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" asp-for="Surname" class="form-control" />
                                            <label class="form-label" asp-for="Surname"></label>
                                            <span class="text text-danger" asp-validation-for="Surname"></span>
                                        </div>
                                    </div>     
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" asp-for="Email" class="form-control" />
                                            <label class="form-label" asp-for="Email"></label>
                                            <span class="text text-danger" asp-validation-for="Email"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" asp-for="UserName" class="form-control" />
                                            <label class="form-label" asp-for="UserName"></label>
                                            <span class="text text-danger" asp-validation-for="UserName"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" asp-for="CurrentPassword" class="form-control" />
                                            <label class="form-label" asp-for="CurrentPassword"></label>
                                            <span class="text text-danger" asp-validation-for="CurrentPassword"></span>
                                        </div>
                                        </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" asp-for="NewPassword" class="form-control" />
                                            <label class="form-label" asp-for="NewPassword"></label>
                                            <span class="text text-danger" asp-validation-for="NewPassword"></span>
                                        </div>
                                    </div>     <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" asp-for="ConfirmNewPassword" class="form-control" />
                                                <label class="form-label" asp-for="ConfirmNewPassword"></label>
                                                <span class="text text-danger" asp-validation-for="ConfirmNewPassword"></span>
                                        </div>
                                    </div>

            

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Update</button>
                  </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>